body
    background #ECE6DE
    font-family "Roboto", sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    background-image linear-gradient(to bottom, #ECE6DE, #ECE6DE 70%, #ffffff 70%, #ffffff)
    background-size cover
    background-repeat no-repeat

html, body
    margin 0
    height 100%

.login-form
    width 350px
    padding 40px 30px
    background #fff
    -moz-border-radius 4px
    -webkit-border-radius 4px
    border-radius 4px
    margin auto
    position absolute
    left 0
    right 0
    top 50%
    -moz-transform translateY(-50%)
    -ms-transform translateY(-50%)
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    .thumbnail
        background #8D7249
        width 200px
        height 200px
        margin 0 auto 20px
        border-top-left-radius 100%
        border-top-right-radius 100%
        border-bottom-left-radius 100%
        border-bottom-right-radius 100%
        box-sizing border-box
        img
            display block
            width 100%
    .thumbnail2
        background #EF3B3A
        width 220px
        height 220px
        margin 0 auto 20px
        padding 50px 20px
        border-top-left-radius 100%
        border-top-right-radius 100%
        border-bottom-left-radius 100%
        border-bottom-right-radius 100%
        box-sizing border-box
    label
        border-color #8D7249
        color #8D7249
    input
        border-color #8D7249
        color #8D7249

.form-group
    position relative
    margin-bottom 15px

.form-control
    width 100%
    height 50px
    border none
    padding 5px 7px 5px 15px
    background #fff
    color #666
    border 2px solid #ddd
    -moz-border-radius 4px
    -webkit-border-radius 4px
    border-radius 4px

.form-control:focus, .form-control:focus + .fa
    border-color #8D7249
    color #8D7249

.log-status
    &.wrong-entry
        -moz-animation wrong-log 0.3s
        -webkit-animation wrong-log 0.3s
        animation wrong-log 0.3s

.log-status.wrong-entry .form-control, .wrong-entry .form-control + .fa
    border-color #ed1c24
    color #ed1c24

.log-btn
    background #8D7249
    dispaly inline-block
    width 100%
    font-size 16px
    height 50px
    color #fff
    text-decoration none
    border none
    -moz-border-radius 4px
    -webkit-border-radius 4px
    border-radius 4px

.link
    text-decoration none
    color #C6C6C6
    float right
    font-size 12px
    margin-bottom 15px
    &:hover
        text-decoration underline
        color #8C918F

.alert
    display none
    font-size 12px
    color #f00
    float left

