extends layouts/layout

block content
    nav.light-blue.lighten-1(role='navigation')
        .nav-wrapper
            a.brand-logo(href='') Logo
            ul#nav-mobile.right.hide-on-med-and-down
                li
                    a(href='/login') Login
                if (!user)
                    li
                        a(href='/register') Register
                if (user)
                    li
                        a(href='/logout') Logout
    .container
        if (!user)
            h1= title
            p Welcome to #{title}
        if (user)
            h1= title
            p Welcome #{user.username}