extends ../layouts/layout

block styles
    link(rel="stylesheet", href="/stylesheets/login.css")

block content
    form.login-form.z-depth-3(role='form', action='/login', method='post')
        .thumbnail
            img(src='/images/logo_blanco.png')
        .form-group.log-status.input-field.col.s6
            input#user_name.form-control.validate(type='text', name='username', required='')
            label(for='user_name') Username:
        .form-group.log-status.input-field.col.s6
            input#user_name.form-control.validate(type='password', name='password', required='')
            label(for='user_pass') Password:
        span.alert Invalid Credentials
        a.link(href='#') Lost your password?
        button.log-btn(type='submit') Enter
        p.link
            | Not registered? 
            a(href='#') Register

    block scripts
        script(src="/javascripts/register.js")