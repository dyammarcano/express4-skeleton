extends layouts/layout

block content
    nav.container.light-blue.lighten-1(role='navigation')
        .nav-wrapper
            a#logo-container.brand-logo(href='#') Logo
            ul.right.hide-on-med-and-down
                li
                    a(href='/logout') Logout
            ul#nav-mobile.side-nav
                li
                    a(href="/dashboard") Dashboard
            a.button-collapse(href='#', data-activates='nav-mobile')
                i.material-icons menu
    #index-banner.section.no-pad-bot
        .container
            br
            br
            h1.header.center.orange-text Welcome #{user.username}
            .row.center
                h5.header.col.s12.light Session ID: #{user._id}
            br
            br
    .container